<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:layout_margin="@dimen/activity_horizontal_margin"
tools:context="com.ramoieee.wolfbyte.brunapplication.UserSettingsActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/view_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No name"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <EditText android:id="@+id/edit_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Name"
            android:maxLines="1"
            android:visibility="gone"/>

        <TextView android:id="@+id/view_userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No e-mail"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <TextView android:id="@+id/view_userBonustime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No bonus time"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <EditText android:id="@+id/edit_userBonustime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No bonus time"
            android:inputType="time"
            android:visibility="gone"/>

        <TextView android:id="@+id/view_userCredential"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No credential"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <TextView android:id="@+id/view_userInstitution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No institution"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <TextView android:id="@+id/view_userBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No birthdate"

            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />


        <TextView android:id="@+id/view_userStudentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No number"

            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />


        <TextView android:id="@+id/view_userYearClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No year specified"

            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />


        <TextView android:id="@+id/view_userFavArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No favorite area"

            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <EditText android:id="@+id/edit_userFavArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No favorite area"
            android:maxLines="1"
            android:visibility="gone"/>


        <Button android:id="@+id/button_edit_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Editar informações" />

        <Button android:id="@+id/button_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Desconectar" />
    </LinearLayout>
</ScrollView>

    <Button android:id="@+id/button_back_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Voltar" />

</LinearLayout>
